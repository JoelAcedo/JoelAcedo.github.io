transition(property = all, time = 0.4s, effect = ease-in-out)
  -webkit-transition:property time effect;
  -moz-transition: property time effect;
  -o-transition: property time effect;
  transition: property time effect;

.page-header
  color: #fff
  text-align: center;
  background-color: #159957
  background-image: linear-gradient(120deg, #155799, #159957)

  nav
    position: relative;
    width: 100%
    padding: 0.5rem
    z-index: 100

    ul
      padding-left: 0
      list-style: none;

      li
        opacity: 0.7
        display: inline-block;
        margin: 0rem 1.2rem
        font-size: 1.0em
        font-weight: bold;
        transition(opacity)

        a
          text-decoration: none
          color: inherit

      li:hover
        opacity: 1
        transition(opacity)

.profile_image
  width: 100%
  height: 10rem
  // padding: 0rem 6rem
  margin: 0 auto
  position: absolute;
  transform: translateY(-5rem);
  z-index: 100

  figure
    width: 10rem
    height: 10rem
    margin: 0 auto
    //padding: 1rem
    // background-color:rgb(255, 255, 255)
    border 0.7rem solid rgba(255, 255, 255, 0.8)
    border-radius: 100%
    box-shadow: 0px 2px 3px rgba(0,0,0,0.2)

    img
      max-width: 100%
      max-height: 100%
      border-radius: inherit
