/* VARIABLES */
color-lg1-init = #155799
color-lg1-end = #159957

/* MIXINS */

transition(property = all, time = 0.4s, effect = ease-in-out)
  -webkit-transition:property time effect;
  -moz-transition: property time effect;
  -o-transition: property time effect;
  transition: property time effect;

size-wh(w, h)
  width: w
  height: h

/* HEADER */

.page-header
  color: #fff
  text-align: center;
  background-color: #159957
  background-image: linear-gradient(120deg, color-lg1-init, color-lg1-end)

  nav
    position: relative;
    width: 100%
    padding: 0.5rem
    z-index: 100
    vertical-align: middle;

    ul
      padding-left: 0
      margin-top: 1rem
      list-style: none;
      // transition(all, 0.5s, cubic-bezier(0.675, 0.170, 0.245, 0.795))

      li
        opacity: 0.7
        display: inline-block;
        margin: 0rem 1.2rem
        font-size: 1.0em
        font-weight: bold;
        transition(opacity)

        a
          text-decoration: none
          color: inherit

        &:hover
          opacity: 1
          transition(opacity)

.nav-open
  max-height: 25rem !important
  opacity: 1 !important
  transition(max-height, 0.5s, cubic-bezier(0.675, 0.170, 0.245, 0.795))

.project-name
  margin-top: 0
  margin-bottom: 0.1rem

.project-tagline
  margin-bottom: 0
  font-weight: normal
  opacity: 0.7

.btn-nav-header
  cursor: pointer
  // font-size: 2rem
  position: absolute
  display: block
  top: 1rem
  right: 1rem
  //float: right;
  //size-wh(30px, 40px)
  transition(all, 0.4s)
  z-index: 200

  span
    size-wh(30px, 4px)
    margin-bottom: 6px
    border-radius: 1000px
    background-color: rgb(255, 255, 255)
    opacity: 0.8
    display: block
    transition(opacity)

  &:hover span
      opacity: 1
      transition(opacity)

.rotate
  transform: rotate(-90deg);
  transition(all, 0.4s)

  span
    opacity: 1

.profile_image
  width: 100%
  //height: 10rem
  // padding: 0rem 6rem
  margin: 0 auto
  position: absolute;
  transform: translateY(-5rem);
  z-index: 100

  figure
    size-wh(10rem, 10rem)
    margin: 0 auto
    //padding: 1rem
    // background-color:rgb(255, 255, 255)
    border 0.6rem solid rgba(255, 255, 255, 0.8)
    border-radius: 100%
    box-shadow: 0px 2px 3px rgba(0,0,0,0.2)

    img
      max-width: 100%
      max-height: 100%
      border-radius: inherit

@media screen and (min-width: 64em)
  .project-name
    padding: 3rem 6rem 0rem
    font-size: 3.25rem

  .project-tagline
    padding: 0rem 6rem 7rem
    font-size: 1.25rem

  .page-header nav
    display: block

    // ul
    //   display: block

  .btn-nav-header
    display: none


@media screen and (min-width: 42em) and (max-width: 64em)
  .project-name
    padding: 3rem 4rem 0rem
    font-size: 2.25rem

  .project-tagline
    padding: 0rem 4rem 5rem
    font-size: 1.15rem

  .page-header nav ul
    //display: none
    max-height: 0
    overflow: hidden;
    padding-top: 2rem
    margin-bottom: -1rem
    opacity: 0
    transition(all, 0.5s, cubic-bezier(0.675, 0.170, 0.245, 0.795))

    li
      display: block
      padding-bottom: 1rem

  .profile_image
    transform: translateY(-4rem)

    figure
      size-wh(8rem, 8rem)
      border 0.4rem solid rgba(255, 255, 255, 0.8)

  .btn-nav-header
    display: block

@media screen and (max-width: 42em)
  .project-name
    padding: 2rem 1rem 0rem
    font-size: 1.75rem

  .project-tagline
    padding: 0rem 1rem 4rem
    font-size: 1.0rem

  .page-header nav ul
    //display: none
    max-height: 0
    overflow: hidden;
    padding-top: 2rem
    margin-bottom: -1rem
    opacity: 0
    transition(all, 0.5s, cubic-bezier(0.675, 0.170, 0.245, 0.795))

    li
      display: block
      padding-bottom: 1rem

  .profile_image
    transform: translateY(-3rem)

    figure
      size-wh(8rem, 8rem)
      border 0.4rem solid rgba(255, 255, 255, 0.8)


/* MAIN CONTENT */

/* SKILLS */

.skills-row
  margin: 0 auto
  text-align: center;

  .skill-circle
    // size-wh(10rem, 10rem)
    display: inline-block
    margin: 1rem
    background-image: linear-gradient(120deg, color-lg1-init, color-lg1-end)
    border-radius: 100%

    span
      position: absolute;
      size-wh(8rem, 8rem)
      line-height: 8rem
      display: block;
      // text-align: center;
      color: rgb(255, 255, 255)
      font-weight: bold
      font-size: 2rem
      z-index: 100
      opacity: 0
      transition(opacity, 0.2s)

    figure
      size-wh(8rem, 8rem)
      margin: 0 auto
      //padding: 0.6rem
      border 0.6rem solid rgba(255, 255, 255, 0.0)
      border-radius: 100%

      img
        max-width: 100%
        max-height: 100%
        border-radius: inherit
        background: rgb(255, 255, 255)
        transition(opacity, 0.2s)

    &:hover
      span
        opacity: 1
        transition(opacity, 0.2s)

      figure
        img
          opacity: 0.1
          transition(opacity, 0.2s)
