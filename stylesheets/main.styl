.grid-hide
  transform: translateX(-30rem);
  opacity: 0
  transition(,1s)
  // visibility: hidden;

.grid
  text-align: center
  padding-top: 2rem
  font-size: 0
  z-index: 5

  .portafolio-item
    width: 47%
    // height: 16rem
    height: auto;
    margin: 0.5rem
    display: inline-block;
    // background-color: rgb(135, 30, 114)
    cursor: pointer
    transition(background-color, 0.2s);
    overflow: hidden;
    position: relative
    border-radius: 0.2rem

    &:hover
      transition(background-color, 0.2s);

      img
        transform: scale(1)
        transition(all, 1.5s)

      .overlay
        background-color: rgba(21, 153, 87, 0.8)
        transition()

    img
      max-width: 100%
      transform: scale(1.2)
      border: 0
      margin: 0
      transition(all, 1.5s)

    .overlay
      position: absolute;
      size-wh(100%, 100%)
      padding: 0
      top: 0
      left: 0
      transition()

      &:hover
        .project-item-title
          opacity: 1
          transform: translateY(0);
          transition()

        .project-item-subtitle
          opacity: 1
          transform: translateY(0);
          transition()

      .project-item-title
        color: #fefefe
        font-weight: bold;
        font-size: 2rem
        padding: 1rem 1rem 0
        margin-top: 20%
        margin-bottom: 0
        text-align: center;
        transform: translateY(-5rem);
        opacity: 0
        transition()

      .project-item-subtitle
        color: #fefefe
        // font-weight: bold;
        font-size: 1.3rem
        margin: 0
        text-align: center;
        transform: translateY(5rem);
        opacity: 0
        transition()

