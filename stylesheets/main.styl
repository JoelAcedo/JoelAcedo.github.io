/* SHOW MORE */
#show-more
  max-height: 0
  height: 77rem
  overflow: hidden
  //padding-top: 2rem
  // opacity: 0
  transform: skewY(-3deg)
  transition(all, 0.5s, cubic-bezier(0.675, 0.170, 0.245, 0.795))

  .content
    transform: skewY(3deg)

    .skill-slide:first-child
      padding: 0

    .skill-slide
      margin: 2rem 0
      clear: both
      padding: 2rem 0

      h3
        color: #eeeeee
        text-align: center;
        font-size: 2rem

        &:after
          border-color: #eeeeee
          width: 5rem
          margin: 2px auto

      .more-skill-col
        color: #eeeeee
        width: 50%
        min-width: 21rem
        display: inline-block
        padding-bottom: 2rem
        float: left

        ul
          list-style: none;
          margin: 0 0
          padding: 0 0.5rem

          li
            padding: 0.25rem 0.5rem

            i
              transition(margin-left, 0.3s, ease)

            &:hover
              background-color: rgba(#eeeeee, 0.1)

              i
                margin-left: 0.15rem
                transition(margin-left, 0.3s, ease)

          div
            display: inline-block;

          .more-skill-score
            float: right

          .empty
            color: rgba(#eeeeee, 0.3)

.show-more-open
  max-height: 80rem !important
  // margin-bottom: 2rem
  // opacity: 1 !important
  transition(all, 0.5s, cubic-bezier(0.675, 0.170, 0.245, 0.795))


