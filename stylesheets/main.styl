/* MIXINS */

transition(property = all, time = 0.4s, effect = ease-in-out, delay = 0s)
  -webkit-transition:property time effect delay;
  -moz-transition: property time effect delay;
  -o-transition: property time effect delay;
  transition: property time effect delay;

size-wh(w, h)
  width: w
  height: h

/* GENERAL */
*
  box-sizing: border-box

body
  padding: 0
  margin: 0
  font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 16px
  line-height: 1.5
  color: #606c71

a
  color: inherit
  text-decoration: none

  &:hover
    text-decoration: underline;

.btn
  display: inline-block;
  margin: 1rem auto
  color: rgb(21, 153, 87)
  background-color: rgba(255, 255, 255, 0.2)
  border-color: rgb(21, 153, 87)
  border-style: solid;
  border-width: 0.3rem
  border-radius: 0.3rem
  transition(all, 0.2s)

  &:hover
    color: rgb(255, 255, 255)
    background-color: rgb(21, 153, 87)
    text-decoration: none


